@model IEnumerable<WebApplication1.Models.Buyer>

@{
    ViewData["Title"] = "Покупатели";
}

<h1>Покупатели</h1>

<p>
    <a asp-action="Create">Внести данные по новому покупателю</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BuyerId">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.BuyerId">Просмотр</a> |
                <a asp-action="Delete" asp-route-id="@item.BuyerId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
