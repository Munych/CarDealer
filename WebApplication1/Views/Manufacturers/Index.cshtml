@model IEnumerable<WebApplication1.Models.Manufacturer>

@{
    ViewData["Title"] = "Производители";
}

<h1>Производители</h1>

<p>
    <a asp-action="Create">Внести данные по новому производителю</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                Количество автомобилей
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @item.Cars.Count
            </td>
            <td>
                <a asp-controller="Cars" asp-action="Index" asp-route-id="@item.ManufacturerId">Автомобили</a> |
                <a asp-action="Edit" asp-route-id="@item.ManufacturerId">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.ManufacturerId">Просмотр</a> |
                <a asp-action="Delete" asp-route-id="@item.ManufacturerId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
